{#
/**
 * Available variables:
 * - ul__base_class - the base classname
 * - ul__modifiers - array of modifiers to add to the base classname
 * - ul__blockname - blockname prepended to the base classname
 *
 * - listItems - TBD
 */
#}

{{ attach_library('msi/Lists') }}

{% set ul__base_class = ul__base_class|default('Ul') %}

<ul {{ suit(ul__base_class, ul__modifiers, ul__blockname) }}>
  {% block list_content %}
    {% for ul_item in ul_items %}
      {% include "@atoms/lists/_ListItem.twig" with {
        list_item__label: ul_item.label,
        list_item__content: ul_item.content,
        li__base_class: ul_item.li_base_class,
        li__modifiers: ul_item.li_modifiers,
        li__blockname: ul_item.li_blockname,
      } %}
    {% endfor %}
  {% endblock %}
</ul>
