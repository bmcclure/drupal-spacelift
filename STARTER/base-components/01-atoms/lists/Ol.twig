{#
/**
 * Available variables:
 * - ol__items: List items
 *
 * Available blocks:
 * - list_content: Block of list items
 */
#}

{{ attach_library('{{starter}}/lists') }}

{% set ol__base_class = ol__base_class|default('Ol') %}

<ol {{ suit(ol__base_class, ol__modifiers, ol__blockname, ol__extra_classes) }}>
  {% block list_content %}
    {% for item in ol__items %}
      {% include '@atoms/lists/_ListItem.twig' with {
        li__label: item.label,
        li__content: item.content,
        li__base_class: item.base_class,
        li__modifiers: item.modifiers,
        li__blockname: item.blockname,
      } %}
    {% endfor %}
  {% endblock %}
</ol>
