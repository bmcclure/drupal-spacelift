{#
/**
 * @file
 * Content 50/50
 *
 * choices:
 * body-content,
 * related-downloads,
 * featured-video,
 * side-by-side-images,
 * single-image,
 * side-by-side-images-with-content
 *
 * Available variables:
 * - content_5050__base_class - the base class name
 * - content_5050__modifiers - array of modifiers to add to the base classname
 * - content_5050__blockname - blockname prepended to the base classname
 * - content_5050__extra_classes - extra classes
 * -
 * - content_5050__image - image
 * - content_5050__title
 * - content_5050__body
 * - content_5050__button_title
 * - content_5050__url
*/
#}
{% set content_5050__base_class = content_5050__base_class|default('Content5050') %}

<section {{ suit(content_5050__base_class, content_5050__modifiers, content_5050__blockname, content_5050__extra_classes) }}>
  <div class="grid-container">
    {% include '@atoms/text/Heading/Heading.twig' with {
      heading__level: 2,
      heading: content_5050__title,
      heading__extra_classes: ['section-header', 'text-center'],
    } %}

    <div class="Content5050-row grid-x grid-margin-x grid-margin-y large-up-2">
      {% if body_content_block__title %}
        {% include '@organisms/BodyContentBlock/BodyContentBlock.twig' with {
          body_content_block__title: body_content_block__title,
          body_content_block__body: body_content_block__body,
          body_content_block__button_title: body_content_block__button_title,
          body_content_block__url: body_content_block__url,
        } %}
      {% endif %}
      {% if sidebyside_imageswithcontent__title %}
        {% include '@organisms/SideBySideImagesWithContent/SideBySideImagesWithContent.twig' with {
          sidebyside_imageswithcontent__image: sidebyside_imageswithcontent__image,
          sidebyside_imageswithcontent__title: sidebyside_imageswithcontent__title,
          sidebyside_imageswithcontent__body: sidebyside_imageswithcontent__body,
          sidebyside_imageswithcontent__button_title: sidebyside_imageswithcontent__button_title,
          sidebyside_imageswithcontent__url: sidebyside_imageswithcontent__url,
          sidebyside_imageswithcontent__image2: sidebyside_imageswithcontent__image2,
          sidebyside_imageswithcontent__title2: sidebyside_imageswithcontent__title2,
          sidebyside_imageswithcontent__body2: sidebyside_imageswithcontent__body2,
          sidebyside_imageswithcontent__button_title2: sidebyside_imageswithcontent__button_title2,
          sidebyside_imageswithcontent__url2: sidebyside_imageswithcontent__url2,
        } %}
      {% endif %}

    </div>
  </div>
</section>
