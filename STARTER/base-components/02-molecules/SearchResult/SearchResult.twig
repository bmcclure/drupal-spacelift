{#
/**
 * @file
 * SearchResult

 *
 * Available variables:
 * - search_result__base_class - the base class name
 * - search_result__modifiers - array of modifiers to add to the base classname
 * - search_result__blockname - blockname prepended to the base classname
 * - search_result__extra_classes - extra classes
 * -
 * - search_result__image - image
 * - search_result__title
 * - search_result__body
 * - search_result__url
 * - search_result__background_treatment
 * - search_result__type
*/
#}
{% set search_result__base_class = search_result__base_class|default('SearchResult') %}
{% set search_result__extra_classes = search_result__extra_classes|default(['']) %}

<article class="SearchResult">
  <div class="grid-x grid-margin-x">
    {% if search_result__image %}
      <a class="SearchResult-image cell medium-3" href="{{ search_result__url }}" title="{{ search_result__title }}">
        <div class="SearchResult-imageBackground lozad"
             data-background-image="{{ search_result__image }}"
             style="background: url(assets/images/placeholder.png) no-repeat center; background-size: {{ search_result__background_treatment }}; padding-top: 100%;"></div>
      </a>
    {% endif %}

    <div class="SearchResult-text cell medium-auto">
      <h3><a href="{{ search_result__url }}" title="{{ search_result__title }}">{{ search_result__title }}</a></h3>
      <p>{{ search_result__body }}</p>
      <div class="SearchResult-type bg-light">{{ search_result__type }}</div>
    </div>
  </div>
</article>
